{
  "$schema": "https://json.schemastore.org/swcrc",
  "sourceMaps": false,
  "minify": false,
  "module": {
    "type": "es6"
  },
  "jsc": {
    "baseUrl": "./",
    "target": "es2020",
    "parser": {
      "syntax": "typescript",
      "decorators": true,
      "dynamicImport": true
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true
    }
  }
}
